@model midterm_project.Models.Pet

@{
	ViewData["Title"] = "All Pets";
}

<form asp-asp-controller="Pet" asp-action="Create" method="post">
	<div>
		<label class="form-label" asp-for="Name">Name:</label>
		<input asp-for="Name"/>
	</div>

	<div>
		<label class="form-label" asp-for="Description">Description:</label>
		<input asp-for="Description"/>
	</div>

	<div>
		<label class="form-label" asp-for="Url">Photo:</label>
		<input asp-for="Url"/>
	</div>

	@* <button type="submit" class="btn btn-primary">Save</button> *@
	<input type="submit" class="btn btn-primary"/>
</form>
