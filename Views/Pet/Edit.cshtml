@model midterm_project.Models.Pet

@{
	ViewData["Title"] = "Details Page";
}

<h1>Edit Pet Details</h1>
<form asp-controller="Pet" asp-action="Edit" method="post">
	<partial name="_PetInputForm" model="Model" />
	<input type="hidden" asp-for="Id" />

	<div class="mt-3">
		<a class="btn btn-light mx-1" asp-controller="Pet" asp-action="List">Back</a>
		<input type="submit" class="btn btn-primary mx-1" value="Save" />
		<a class="btn btn-danger mx-1" asp-controller="Pet" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
	</div>
</form>